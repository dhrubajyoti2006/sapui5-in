<mvc:View
	controllerName="sapui5in.ui.controller.controls.Details"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		title="Control Details"
		id="page">
		<content>
			<VBox>
				<Text text="{data>/selectedItem/id}"/>
				<Text text="{data>/selectedItem/name}"/>
				<Text text="{data>/selectedItem/description}"/>
			</VBox>
		</content>
	</Page>

</mvc:View>
